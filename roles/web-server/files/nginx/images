location ~ ^/assets/ {
  expires max;
  gzip_static on;
  add_header Cache-Control public;
  add_header ETag "";
  break;
}

location ~* \.(eot|ttf|woff)$ {
  add_header Access-Control-Allow-Origin *;
}
